package Game;

import processing.core.PApplet;

public class CharMovment {

	public int movment(int movment){
		
			if(movment <= 4){
				//System.out.println("Wert Vorher: " +wert);
				movment++;
				//System.out.println("Wert nachher: "+wert);
			}if (movment == 5){
				movment = 0;
			}
			return movment;
	}
	
	public int charbewegungrechts(int bewegung){
		bewegung = bewegung + 3; // 3 pixel pro bild für später
		return bewegung;
	}
	
	public int charbewegunglinks(int bewegung){
		bewegung = bewegung - 3;
		return bewegung;
	}
	
	public int charbewegunghoch(int bewegung){
		bewegung = bewegung - 3;
		return bewegung;
	}
	
	public int charbewegungrunter(int bewegung){
		bewegung = bewegung + 3;
		return bewegung;
	}
}
